
<div class="row" id="pr-container">
  <div class="row sub-container">
    <h2>¿Olvidaste tu Contraseña?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <div class="field">
        <!-- <%= f.label :email %> -->
        <%= f.email_field :email, placeholder: "Correo Electrónico", autofocus: true %>
      </div>

      <div class="actions">
        <%= f.submit "Enviar Instrucciones" %>
      </div>
    <% end %>
    <div class="alt-actions">
      <%= link_to('Iniciar Sesión', new_user_session_path)  %> <br>
      <%= link_to('Registro', new_user_session_path)  %> <br>
    </div>
  </div>
  <%# render "devise/shared/links" #%>
</div>
