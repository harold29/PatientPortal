<div id="login-form" class="formbox">
  <h4 class="white title-bold">
      Ingresar
  </h4>
  <%= form_for(:user, :url => session_path(:user), html: {id: "form-login"}) do |f| %>
      <%# devise_error_messages! #%>
    <div class="form-field">
      <%= f.text_field :email, class: "field", placeholder: "Nombre de Usuario", 'data-validation':"email", 'data-validation-error-msg':"Por favor introduzca un correo electronico" %>
    </div>
    <div class="form-field">
      <%= f.password_field :password, class: "field", placeholder: "Contrase単a", 'data-validation':"required", 'data-validation-error-msg':"Por favor introduzca su contrase単a" %>
    </div>
    <div class="form-field" id="button-container">
      <%= f.check_box :remember_me %>
        <%= f.label :Recordarme, id: "remember-label" %> 
        <%= f.submit 'Entrar', id: "login-button" %>
    </div>
    <!-- <div class="form-field" id="button-container">
      
    </div> -->
    <div class="form-field" id="recover-container">
      <%= link_to "多Olvidaste tu contrase単a?", new_password_path(:user), { :id => "pass-recover" }  %>
    </div>
  <% end %>
</div>
<div class="decoration-spd"></div>